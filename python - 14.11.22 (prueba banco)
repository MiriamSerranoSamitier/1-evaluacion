def menu():
    
        print("*************************")
        print("          MENU           ")
        print("*************************")
        print("1.ingresar")
        print("2.sacar")
        print("3.salir")
        num=int(input("Que quieres hacer?: ")
        

def ingresar():
    dinero=int(input("cuanto dinero quieres ingresar"))
    saldo=saldo+dinero
    print("tienes: "+str(saldo))
    return(saldo)
    
def sacar():
    dinero=int(input("cuanto dinero quieres sacar"))
    saldo=saldo-dinero
    print("tienes: "+str(saldo))
    return(saldo)
    
def salir():
    print("deu")
    
main()
